<h1>Add User</h1>
<p>
    <h2>@ViewBag.error</h2>
</p>

<form method="post">
    <div class="form-group">
        <label>
            Name
            <input name="name" type="text" class="form-control" value="@ViewBag.name">
        </label>
    </div>
    <div class="form-group">
        <label>
            E-Mail
            <input name="email" type="email" class="form-control" value="@ViewBag.email">
        </label>
    </div>
    <div class="form-group">
        <label>
            Password
            <input name="password" type="password" class="form-control">
        </label>
    </div>
    <div class="form-group">
        <label>
            Verify Password
            <input name="verify" type="password" class="form-control">
        </label>
    </div>
    <input type="submit" value="Add User" />
</form>
